{
  "device_name": "Derringer (<%= hostname %>)",
  "listening_port" : 0,                       // 0 - randomize port

  /* storage_path dir contains auxilliary app files
     if no storage_path field: .sync dir created in the directory
     where binary is located.
     otherwise user-defined directory will be used
  */
  "storage_path" : "<%= Rails.root.join('tmp', 'btsync') %>",

  // uncomment next line if you want to set location of pid file
  // "pid_file" : "/var/run/btsync/btsync.pid",

  "check_for_updates" : true,
  "use_upnp" : true,                              // use UPnP for port mapping

  /* limits in kB/s
     0 - no limit
  */
  "download_limit" : 0,
  "upload_limit" : 0,

  "shared_folders" :
  [
    {
      // use --generate-secret in command line to create new secret
      "secret" : "<%= secret %>",                // * required field
      "dir" : "<%= Rails.root.join('db', 'scans') %>", // * required field

      // use relay server when direct connection fails
      "use_relay_server" : false,
      "use_tracker" : false,
      "use_dht" : false,
      "search_lan" : true,

      // enable sync trash to store files deleted on remote devices
      "use_sync_trash" : true

      // specify hosts to attempt connection without additional search
      /*
        "known_hosts" :
        [
          "192.168.1.2:44444"
        ]
      */
    }
  ],

  // Force a re-scan/sync every X seconds
  "folder_rescan_interval": 15
}
