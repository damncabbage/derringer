!!! html5
%html.no-js{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title SMASH! Tickets
    %meta{:content => "width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0", :name => "viewport"}/
    %link{:href => "/css/styles.css", :rel => "stylesheet"}/
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :size => "114x114"}/
    %script{:src => "/lib/jquery-1.7.1.min.js"}
    %script{:src => "/lib/json2.js"}
    %script{:src => "/lib/underscore-1.3.3.js"}
    %script{:src => "/lib/backbone-0.9.2.js"}
    %script{:src => "/bootstrap/transition.js"}
    %script{:src => "/bootstrap/collapse.js"}
    %script{:src => "/bootstrap/dropdown.js"}
    %script{:src => "/bootstrap/button.js"}
    %script{:src => "/js/search.js"}
    %script{:src => "/js/orders.js"}
    %script{:src => "/js/tickets.js"}

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-dropdown-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} SMASH!
          .nav-collapse
            %ul.nav
              %li.active
                = link_to "Ticket Booth", url(:index)
              %li
                = link_to "Statistics", url(:stats, :index)
              %li
                = link_to "Statistics", url(:settings, :index)
          / /.nav-collapse
    .panels-container
      #search-panel.panel-outer
        .panel-inner
          .container= yield

